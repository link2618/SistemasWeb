@model DataPaginador<TCategoria>

@*Ventana modal de agregar y editar categoria*@
<div class="modal fade" data-backdrop="static" id="modal1" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title" id="myModalLabel">Agregar Categoria</h4>
                <button type="button" class="close" data-dismiss="modal" onclick="categorias.limpiar()" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>

            <form method="post" class="formCategoria" asp-area="Categorias" asp-controller="Categorias" asp-action="GetCategorias">
                <div class="modal-body">
                    <div class="form-horizontal">

                        <span id="mensaje" class="text-danger"></span>
                        <br />

                        <div class="form-group">
                            <label asp-for="Input.Categoria" class="col-md-2 control-label"></label>
                            <div class="col-md-10">
                                <input asp-for="Input.Categoria" id="catNombre" placeholder="Nombre" class="form-control" />
                                <span asp-validation-for="Input.Categoria" class="text-danger" id="span1"></span>
                            </div>
                        </div>
                        <div class="form-group">
                            <label asp-for="Input.Descripcion" class="col-md-2 control-label"></label>
                            <div class="col-md-10">
                                <input asp-for="Input.Descripcion" id="catDescripcion" placeholder="Descripcion" class="form-control" />
                                <span asp-validation-for="Input.Descripcion" class="text-danger" id="span2"></span>
                            </div>
                        </div>
                        <div class="form-group">
                            <label asp-for="Input.Estado" class="col-md-2 control-label"></label>
                            <div class="col-md-10">
                                <input asp-for="Input.Estado" id="catEstado" />
                            </div>
                        </div>

                        <span class="text-body">Marque la casilla de estado si desea activar la categoria.</span>
                        <input type="text" class="hidden" required />
                        <input asp-for="Input.CategoriaID" id="catCategoriaID" class="hidden" />

                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" onclick="categorias.limpiar()" data-dismiss="modal">Cancelar</button>
                    <button type="submit" class="btn btn-primary" onclick="categorias.RegistrarCategoria()">Guardar</button>
                </div>
            </form>

        </div>

    </div>
</div>
