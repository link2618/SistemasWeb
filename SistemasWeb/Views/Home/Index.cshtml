@model DataPaginador<TCursos>
@{
    ViewData["Title"] = "Home Page";
}

<div class="container">
    <div class="sheetSlider sh--default">
        <input id="s1" type="radio" name="slide1" checked />
        <input id="s2" type="radio" name="slide1" />
        <input id="s3" type="radio" name="slide1" />

        <div class="sh__content">
            <div class="sh__item">
                <img src="~/Images/UWP.png" alt="imgText" class="imgSlider" />
                <!--Informacion de la imagen-->
                <div class="sh__meta">
                    <h4>UWP</h4>
                    <span>Prueba de slider de imagenes, con la plataforma universal de windows UWP <a href="#">Ver</a></span>
                </div>
            </div>

            <div class="sh__item">
                <img src="~/Images/Xamarin.png" alt="imgText" class="imgSlider" />
                <!--Informacion de la imagen-->
                <div class="sh__meta">
                    <h4>Xamarin</h4>
                    <span>Prueba de slider de imagenes, con la plataforma universal de windows UWP</span>
                </div>
            </div>

            <div class="sh__item">
                <img src="~/Images/System3.png" alt="imgText" class="imgSlider" />
                <!--Informacion de la imagen-->
                <div class="sh__meta">
                    <h4>Google</h4>
                    <span>Prueba de slider de imagenes, con la plataforma universal de windows UWP <a href="#">Ver</a></span>
                </div>
            </div>

        </div>

        <!--Botonos-->
        <div class="sh__btns">
            <label for="s1"></label>
            <label for="s2"></label>
            <label for="s3"></label>
        </div>

        <!--Flechas-->
        <div class="sh__arrows">
            <label for="s1"></label>
            <label for="s2"></label>
            <label for="s3"></label>
        </div>

    </div>
    <br />

    <div class="form-group">
        <form action="" method="post">
            <div class="row">
                <div class="col-md-4">
                    <input type="text" id="filtrar" name="filtrar" placeholder="Buscar" class="form-control" />
                </div>
                <div class="col-md-1">
                    <div class="row">
                        <input type="submit" value="Buscar" class="btn btn-success buscar">
                    </div>
                </div>
            </div>
        </form>
    </div>

    @*para crear columnas*@
    <div class="row">
        @foreach (var item in Model.List)
        {
            var image = "data:image/jpg;base64," + Convert.ToBase64String(item.Image, 0, item.Image.Length);
            <div class="col-xs-6 col-md-2">
                <div class="card">
                    <div class="card-header ">
                        <a href="">
                            <img class='img-fluid img-thumbnail circle' src="@image" />
                        </a>
                    </div>
                    <div class="card-body">

                    </div>
                </div>
            </div>
        }
    </div>
</div>

